{
    "include": [
        "src/renderer/src/env.d.ts",
        "src/renderer/src/**/*",
        "src/main/src/**/*",
        "src/renderer/src/**/*.vue",
        "src/preload/*.d.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@main/*": [
                "src/main/*"
            ],
            "@assets/*": [
                "src/renderer/src/assets/*"
            ],
            "@directives/*": [
                "src/renderer/src/directives/*"
            ],
            "@components/*": [
                "src/renderer/src/components/*"
            ],
            "@stores/*": [
                "src/renderer/src/stores/*"
            ],
            "@stores/dummy/*": [
                "src/renderer/src/stores/dummy/*"
            ],
            "@composables/*": [
                "src/renderer/src/composables/*"
            ],
            "@utilities/*": [
                "src/renderer/src/utilities/*"
            ],
            "@symbols/*": [
                "src/renderer/src/symbols/*"
            ],
            "@dummy/*": [
                "src/renderer/src/dummy/*"
            ],
            "@lottie/*": [
                "src/renderer/src/lottie/*"
            ],
            "@autocomplete/*": [
                "src/renderer/src/autocomplete/*"
            ]
        }
    }
}
